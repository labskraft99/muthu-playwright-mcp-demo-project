{
  "name": "saucedemo-playwright-automation",
  "version": "1.0.0",
  "description": "Playwright TypeScript automation tests for SauceDemo",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chrome": "npx playwright test --project=chromium",
    "test:chrome:slack": "npx playwright test --project=chromium --reporter=./reporters/slack-reporter.js",
    "test:slack": "npx playwright test --reporter=./reporters/slack-reporter.js",
    "generate:data": "npx ts-node utils/generateTestData.ts",
    "report": "npx playwright show-report",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@types/xlsx": "^0.0.35",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "xlsx": "^0.18.5"
  }
}
